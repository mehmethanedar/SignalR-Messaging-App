@model List<ChatApplication.Models.User>

@{
    ViewBag.Title = "ChatApp";
}


<div id="kullanicikontrol" class="container h-100">
    <div class="row h-100 justify-content-center align-items-center" style="margin-top: 35%; margin-bottom: 40%;">
        <input type="text" class="form-control" id="txtNickName" value="" placeholder="Kullanıcı Adı">
        <button id="btnStartChat" class="btn btn-dark" style="margin-left:10px">Giris Yap!</button>
    </div>
</div>

<input id="KullaniciId" type="hidden" />
<input id="KullaniciName" type="hidden" />

<div class="container-fluid h-100" id="ChatRoom">
    <div class="row justify-content-center h-100">
        <div class="col-md-4 col-xl-3 chat">
            <div class="card mb-sm-4 mb-md-0 contacts_card">
                <div class="d-flex bd-highlight" style="background: currentColor;height:84px;">
                    <div class="user_info" style="margin-left:147px">
                        <span>Kullanıcılar</span>
                    </div>
                </div>
                <div class="card-body contacts_body" style="width:100%;height:780px;">
                    <ui class="contacts kullanicilar">
                    </ui>
                    <div class="d-flex bd-highlight grup_1">
                        <div class="user_info active" style="width:100%;margin:0;margin-top:5px;">
                            <span><a type="btn" class="grup" style="margin-left:7px;">Grup 1 </a></span>
                            <a href="#" id="grup_1" class="Gruplar" style="margin-left:231px;margin-top:2px;">+ Gruba Katıl</a>
                        </div>
                    </div>
                    <div class="d-flex bd-highlight grup_2">
                        <div class="user_info active" style="width:100%;margin:0;margin-top:5px;">
                            <span><a type="btn" class="grup" style="margin-left:7px;">Grup 2 </a></span>
                            <a href="#" id="grup_2" class="Gruplar" style="margin-left:231px;margin-top:2px;">+ Gruba Katıl</a>
                        </div>
                    </div>
                </div>                
                <div class="card-footer"></div>
            </div>
        </div>

        <div class="col-md-8 col-xl-8 Genelchat">
            <div class="card">
                <div class="card-header msg_head">
                    <div class="d-flex bd-highlight">
                        <div class="img_cont">
                            <img src="~/Content/img/AllChatİmage.jpg" class="rounded-circle user_img">
                            <span class="online_icon"></span>
                        </div>
                        <div class="user_info">
                            <span>Genel Chat Odası</span>
                        </div>
                    </div>
                </div>
                <div id="messages" class="card-body msg_card_body " style="background-image: url('../../Content/img/bg-chat-tile-light_04fcacde539c58cca6745483d4858c52.png');">
                </div>
                <div class="card-footer">
                    <div class="input-group">
                        <div class="input-group-append">
                            <span class="input-group-text attach_btn"><i class="fas fa-paperclip"></i></span>
                        </div>
                        <textarea style="max-width:950px;" id="txtMessage" class="form-control type_msg" placeholder="Type your message..."></textarea>
                        <button id="btnSendMessage" class="btn-1" style="margin-left:10px;">Gönder</button>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-8 col-xl-8 Privatechat">
            <div class="card">
                <div class="card-header msg_head">
                    <div class="d-flex bd-highlight">
                        <div class="img_cont">
                            <img src="~/Content/img/AllChatİmage.jpg" class="rounded-circle user_img">
                            <span class="online_icon"></span>
                        </div>
                        <div class="user_info" id="OdaAdi">
                            <p>1767 Messages</p>
                        </div>bul
                        <div hidden><input id="gidecekkullanici" value="" /></div>
                    </div>
                    <span id="action_menu_btn" onclick="PrivateKapat()"><i class="close icon" style="background: white;"></i></span>
                </div>
                <div id="Privatemessages" class="card-body msg_card_body " style=" background-image: url('../../Content/img/bg-chat-tile-light_04fcacde539c58cca6745483d4858c52.png'); overflow-y:scroll; max-height:700px;">
                </div>
                <div class="card-footer">
                    <div class="input-group">
                        <div class="input-group-append">
                            <span class="input-group-text attach_btn"><i class="fas fa-paperclip"></i></span>
                        </div>
                        <textarea style="max-width:950px;" id="PrivatetxtMessage" class="form-control type_msg" placeholder="Type your message..."></textarea>
                        <button id="PrivatebtnSendMessage" class="btn-1" style="margin-left:10px;">Gönder</button>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-8 col-xl-8 GrupChat">
            <div class="card">
                <div class="card-header msg_head">
                    <div class="d-flex bd-highlight">
                        <div class="img_cont">
                            <img src="~/Content/img/AllChatİmage.jpg" class="rounded-circle user_img">
                            <span class="online_icon"></span>
                        </div>
                        <div class="user_info" id="GrupOdaAdi">
                        </div>
                        <div hidden><input id="grupAdi" value="" /></div>
                    </div>
                    <span id="action_menu_btn" onclick="PrivateKapat()"><i class="close icon" style="background: white;"></i></span>
                </div>
                <div id="Grupmessages" class="card-body msg_card_body " style=" background-image: url('../../Content/img/bg-chat-tile-light_04fcacde539c58cca6745483d4858c52.png');">
                </div>
                <div class="card-footer">
                    <div class="input-group">
                        <div class="input-group-append">
                            <span class="input-group-text attach_btn"><i class="fas fa-paperclip"></i></span>
                        </div>
                        <textarea style="max-width:950px;" id="GruptxtMessage" class="form-control type_msg" placeholder="Type your message..."></textarea>
                        <button id="GrupbtnSendMessage" class="btn-1" style="margin-left:10px;">Gönder</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/Scripts/jquery.signalR-2.4.2.min.js"></script>
    <script src="~/signalr/hubs"></script>
    <script type="text/javascript">

        $(function () {
            setScreen(false);
            // Declare a proxy to reference the hub.
            var chatHub = $.connection.chatHub;
            console.log(chatHub);
            chatHub.client.onConnected = function (id, userName, durum, kullanicilar, mesajlar) {
                setScreen(true);
                $('#KullaniciId').val(id);
                $('#KullaniciName').val(userName);
                $('#spanUser').html(userName);
                // Add All Users
                for (i = 0; i < kullanicilar.length; i++) {
                    console.log(kullanicilar);
                    AddUser(chatHub, kullanicilar[i].ConnectionId, kullanicilar[i].UserName, kullanicilar[i].Status);
                }
                // Add Existing Messages
                for (i = 0; i < messages.length; i++) {
                    AddMessage(messages[i].UserName, messages[i].Message);
                }
            }
            // On New User Connected
            chatHub.client.onNewUserConnected = function (id, userName, status) {

                AddUser(chatHub, id, userName, status);
            }
            // On User Disconnected
            chatHub.client.onUserDisconnected = function (userName, status) {
                $('#' + userName + "icon").removeClass;
                $('#' + userName + "icon").addClass(status);
            }

            chatHub.client.messageReceived = function (userName, message) {

                AddMessage(userName, message);
            }
            chatHub.client.sendPrivateMessage = function (toUserId, fromUserName, message) {
                var kullaniciadi = $('#txtNickName').val();
                var tarih = new Date();
                var saat = tarih.getHours();
                var dakika = tarih.getMinutes();
                if (kullaniciadi == fromUserName) {
                    $('#Privatemessages').append(`<div class="d-flex justify-content-end mb-4"><div class= "msg_cotainer_send"> <label style="color: #B4886B">${fromUserName}</label> </br>${message}<span class= "msg_time_send" style="margin-top:3px; color:white">${saat}:${dakika} Today</span ></div > </div >`);
                } else {
                    alert(fromUserName + " kullanicisindan yeni mesajınız var!");
                    $("#Privatemessages").append(`<div class="d-flex justify-content-start mb-4">
                        <div class="msg_cotainer">
                            <label style="color: #B4886B">${fromUserName}:</label> </br> ${message}
                            <span class= "msg_time_send" style="margin-top:3px;">${saat}:${dakika} Today</span >
                        </div>
                    </div>`);
                }
            }
            chatHub.client.sendMessageToGruop = function (userName, message) {
                var kullaniciadi = $('#txtNickName').val();
                var tarih = new Date();
                var saat = tarih.getHours();
                var dakika = tarih.getMinutes();
                if (kullaniciadi == userName) {
                    $('#Grupmessages').append(`<div class="d-flex justify-content-end mb-4"><div class= "msg_cotainer_send"> <label style="color: #B4886B">Ben:</label> </br>${message}<span class= "msg_time_send" style="margin-top:3px; color:white;">${saat}:${dakika} Today</span ></div > </div >`);
                }
                else {
                    alert("Grup Mesajınız var!")
                    $("#Grupmessages").append(`
                    <div class="d-flex justify-content-start mb-4">
                        <div class="msg_cotainer">
                            <label style="color: #B4886B">${userName}:</label> </br> ${message}
                            <span class= "msg_time_send" style="margin-top:3px;">${saat}:${dakika} Today</span >
                        </div>
                    </div>`);
                }
            }
            // Start Hub
            $.connection.hub.start().done(function () {
                $("#btnStartChat").click(function () {
                    var name = $("#txtNickName").val().trim();
                    if (name.length > 0) {
                        chatHub.server.connect(name);
                    }
                    else {
                        alert("Lütfen Kullanıcı Adı Giriniz!");
                    }
                });
                $('#btnSendMessage').click(function () {
                    var msg = $("#txtMessage").val();
                    if (msg.length > 0) {
                        var userName = $('#KullaniciName').val();
                        chatHub.server.sendMessageToAll(userName, msg);
                        $("#txtMessage").val('');
                    }
                });
                $('.Gruplar').click(function () {
                    $("#Grupmessages").empty();
                    var grupName = $(this).attr("id");
                    chatHub.server.join(grupName);
                    $("#grupAdi").val(grupName);
                    $(".Genelchat").hide();
                    $(".Privatechat").hide();
                    $("#GrupOdaAdi").empty();
                    $("#GrupOdaAdi").append(`<span >${grupName} </span>`);
                    $(".GrupChat").show();
                });
                $('#GrupbtnSendMessage').click(function () {
                    var msg = $("#GruptxtMessage").val();
                    if (msg.length > 0) {
                        var userName = $('#KullaniciName').val();
                        var grupName = $('#grupAdi').val();
                        chatHub.server.sendMessageToGruop(userName, msg, grupName);
                        $("#GruptxtMessage").val('');
                    }
                });
                $("#txtNickName").keypress(function (e) {
                    if (e.which == 13) {
                        $("#btnStartChat").click();
                    }
                });
                $("#txtMessage").keypress(function (e) {
                    if (e.which == 13) {
                        $('#btnSendMessage').click();
                    }
                });
            });
        });

        function setScreen(isLogin) {
            if (!isLogin) {
                $("#ChatRoom").hide();
                $("#kullanicikontrol").show();
            }
            else {
                $("#ChatRoom").show();
                $(".GrupChat").hide();
                $(".Privatechat").hide();
                $("#kullanicikontrol").hide();
            }
        }
        function PrivateKapat() {
              $(".Privatechat").hide();
              $(".GrupChat").hide();
              $(".Genelchat").show();
        }
        function AddUser(chatHub, id, name, Durum) {
            console.log(id);
            var kullaniciadi = $('#txtNickName').val();
            if (kullaniciadi == name) {
                $(".kullanicilar").prepend(`<div class="d-flex bd-highlight">
                    <div class="user_info" >
                        <span>Merhaba (${name})</span>
                    </div>
                </div>`);
            }
            else {
                var element = document.getElementsByClassName(name);
                if (element[0]) { element[0].remove(); }

                $(".kullanicilar").append(`
                <div class="d-flex bd-highlight ${name}"  >
                     <div class="user_info active" style="width:100%;margin:0;margin-top:5px;">
                         <a href="#" id="${name}icon" class="${Durum}" style="margin-left:7px;margin-top:7px;"></a>
                         <span><a type="btn" class="users" id="${name}" data-id="${id}">${name}</a></span>
                     </div>
                </div>`);
            }
            $(".users").dblclick(function () {
                var Adi = $(this).attr('id');
                var idsi = $(this).attr('data-id');
                var Mesaj = {
                    receiver: kullaniciadi,
                    Sender: Adi,
                }
                if (kullaniciadi != Adi) {
                    $(".GrupChat").hide();
                    $("#gidecekkullanici").val(idsi);
                    $(".Genelchat").hide();
                    $("#OdaAdi").empty();
                    $("#OdaAdi").append(`<span >${Adi} Ozel Mesaj Odası</span>`);
                    $.ajax({
                        type: "POST",
                        url: "@Url.Action("MessagesSent", "Home")",
                        data: JSON.stringify(Mesaj),
                        contentType: "application/json; charset=utf-8",
                        dataType: "json",
                        success: function (mesajlar) {
                            $("#Privatemessages").empty();
                            if (mesajlar.length != 0) {
                                for (var i = 0; i < mesajlar.length; i++) {
                                    if (kullaniciadi == mesajlar[i].Value) {
                                        $('#Privatemessages').append(`<div class="d-flex justify-content-end mb-4"><div class= "msg_cotainer_send"> <label style="color: #B4886B">Ben:</label> </br>${mesajlar[i].Text}<span class= "msg_time_send" style="margin-top:3px; color:white;">Today</span ></div > </div >`);
                                    }
                                    else {
                                        $("#Privatemessages").append(`<div class="d-flex justify-content-start mb-4">
                                        <div class="msg_cotainer">
                                            <label style="color: #B4886B">${mesajlar[i].Value}:</label> </br> ${mesajlar[i].Text}
                                            <span class= "msg_time_send" style="margin-top:3px; color:white;">Today</span >
                                            </div>
                                        </div>`);
                                    }
                                }
                            }
                        },
                        error: function () {
                            alert("Hata");
                        },
                    });
                    $(".Privatechat").show();
                    $('#PrivatebtnSendMessage').click(function () {
                        var msg = $("#PrivatetxtMessage").val();
                        if (msg.length > 0) {
                            var gidenKullanici = $('#gidecekkullanici').val();
                            chatHub.server.sendPrivateMessage(gidenKullanici, msg);
                            $("#PrivatetxtMessage").val('');
                        }
                    });
                    $("#PrivatetxtMessage").keypress(function (e) {
                        if (e.which == 13) {
                            $('#PrivatebtnSendMessage').click();
                        }
                    });
                }
            });
        }

        function AddMessage(userName, message) {
            var tarih = new Date();
            var saat = tarih.getHours();
            var dakika = tarih.getMinutes();
            var kullanici = $('#KullaniciName').val();
            if (kullanici == userName) {
                $("#messages").append(`<div class="d-flex justify-content-end mb-4"><div class= "msg_cotainer_send"> <label style="color: #B4886B">Ben:</label> </br>${message}<span class= "msg_time_send" style="margin-top:3px; color:white;">${saat}:${dakika} Today</span ></div > </div >`);
            }
            else {
                $("#messages").append(`<div class="d-flex justify-content-start mb-4">
                <div class="msg_cotainer">
                    <label style="color: #B4886B">${userName}:</label> </br> ${message}
                    <span class= "msg_time_send" style="margin-top:3px;">${saat}:${dakika} Today</span >
                    </div>
                </div>`);
            }
        }
    </script>
}
